{
    "name": "reliable-event-processing",
    "private": true,
    "packageManager": "pnpm@10.27.0",
    "engines": {
      "node": "24.12.0",
      "pnpm": "10.27.0"
    },
    "scripts": {
      "dev:api": "pnpm --filter @app/api dev",
      "dev:worker": "pnpm --filter @app/worker dev",
  
      "build": "pnpm -r build",
      "typecheck": "pnpm -r typecheck",
      "lint": "pnpm -r lint",
      "test": "pnpm -r test",
  
      "infra:up": "docker compose -f infra/docker-compose.yml up -d",
      "infra:down": "docker compose -f infra/docker-compose.yml down",
      "infra:logs": "docker compose -f infra/docker-compose.yml logs -f",

      "demo:send": "node scripts/send-demo-events.mjs",
      "demo:m3": "bash scripts/demo_m3.sh"
    },
    "devDependencies": {
      "@types/node": "^24.0.0",
      "typescript": "^5.0.0"
    }
  }